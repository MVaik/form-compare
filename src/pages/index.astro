---
import BasicRHF from "../components/react/BasicRHF";
import Layout from "../layouts/Layout.astro";
import ComparisonBlock from "../layouts/ComparisonBlock.astro";
import BasicTForm from "../components/react/BasicTForm";
import { BasicAngularComponent } from "../components/angular/BasicAngular.component";
import BasicFormik from "../components/react/BasicFormik";
import { BasicTFormComponent } from "../components/angular/BasicTForm.component";
---

<Layout>
  <ComparisonBlock title="React">
    <BasicRHF client:load />
    <BasicTForm client:load />
    <BasicFormik client:load />
  </ComparisonBlock>
  <ComparisonBlock title="Angular">
    <BasicAngularComponent client:load />
    <BasicTFormComponent client:load />
  </ComparisonBlock>
</Layout>
